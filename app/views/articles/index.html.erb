<div class="container">
  <% @articles.each do |article| %>
    <div class="card my-3 border-0">
      <div class="card-body">
        <h3 class="inline-block card-title border-bottom py-2"><%= link_to article.title, article_path(article), class: "article-title" %></h3>
        <p class="card-text"><%= article.content %></p>
      </div>
    </div>
  <% end %>
</div>